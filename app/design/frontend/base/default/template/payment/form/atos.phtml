<?php $_code = $this->getMethodCode(); ?>
<fieldset class="form-list">
  	<?php $cards = $this->getCreditCardsAccepted(); ?>
  	<?php if($cards): ?>
    <ul id="payment_form_<?php echo $_code ?>" style="display:none">
        <li>
          	<div class="input-box">
              	<?php echo $this->__('Select your credit card') ?>
            </div>
        </li>
        <li>
      	<?php foreach($cards as $key => $value): ?>
            <input id="<?php echo $_code ?>_atos_cc_<?php echo $key ?>" class="atos_cc validate-one-required" type="radio" name="payment[cc_type]" value="<?php echo $key ?>" />
            <a href="javascript:;" onclick="document.getElementById('<?php echo $_code ?>_atos_cc_<?php echo $key ?>').checked=true;"><img style="vertical-align:middle;" src="<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA) . 'atos/' . $key ?>.gif" alt="<?php echo $value ?>" /></a>
            <label style="float: none;" for="<?php echo $_code ?>_atos_cc_<?php echo $key ?>"><?php echo $value ?></label>
            <div style="margin-bottom:6px;"></div>
      	<?php endforeach; ?>
      	</li>
    </ul>
    <?php endif; ?>
</fieldset>